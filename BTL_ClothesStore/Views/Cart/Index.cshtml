@{
    ViewData["Title"] = "Cart Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<CartModel>



<section id="page-header" class="about-header">
    <h2>#Giỏ Hàng</h2>
    <p>Áp mã giảm giá của bạn và tiết kiệm lên đến 70%!</p>
</section>

<section id="cart" class="section-p1">
    @{
        double total = 0;

        foreach (var i in Model)
        {
            total += i._price;
        }

    }
    <table width="100%">
        <thead>
            <tr>
                <td>Xóa</td>
                <td>Mã Sản Phẩm</td>
                <td>Ảnh</td>
                <td>Sản Phẩm</td>
                <td>Giá</td>
                <td>Số Lượng</td>
                <td>Thành Tiền</td>
            </tr>
        </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td><a asp-action="Delete" asp-route-id="@item.product.ProductId"><i class="fa fa-times-circle" aria-hidden="true"></i></a></td>
                        <td>@item.product.ProductId</td>
                        <td><img src="~/Image/ProductImage/@item.product.ProductImage" alt=""></td>
                        <td>@item.product.ProductName</td>
                        <td>@item.product.ProductPrice</td>
                        <td>@item._quantity</td>
                        <td>@item._price</td>
                    </tr>
                }
                
                <tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td><b>Tong tien: @total</b></td>
                </tr>
            </tbody>
        
        

    </table>
</section>
<section id="cart-add" class="section-p1">
    <div id="subtotal">
       
        <button class="normal"><a asp-controller="Product" asp-action="Index"> Tiếp Tục Mua Hàng</a></button>
        <button class="normal"><a asp-controller="Order" asp-action="Index"> Thanh Toán</a></button>
    </div>
</section>

